{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "windows": [
      {
        "title": "RAP",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
    }
    ],
    "security": {
      "csp": null
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": false,
        "scope": [
          "$APPDATA/*",
          "$APPDATA/com.tauri.dev/*"
        ]
      },
      "path": {
        "all": true
      },
      "notification": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "process": {
        "all": false,
        "exit": true,
        "relaunch": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "http": {
        "all": true
      },
      "os": {
        "all": true
      }
    }
  }
}